generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      Status    @default(PENDING)
}

enum Status {
  PENDING
  IN_PROGRESS
  DONE
}